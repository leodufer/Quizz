<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="py.edu.facitec.quizz.DashboardActivity">

    <TextView
        android:id="@+id/textViewNivel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textViewNivel"
        android:layout_alignBottom="@+id/textViewNivel"
        android:layout_toEndOf="@+id/textViewNivel"
        android:layout_toRightOf="@+id/textViewNivel"
        android:text="18"
        android:textAlignment="center"
        android:textColor="@color/colorPrimary"
        android:textSize="18sp"
        android:textStyle="bold|italic"
        tools:layout_editor_absoluteX="70dp"
        tools:layout_editor_absoluteY="179dp" />

    <ImageView
        android:id="@+id/imageViewAvatar"
        android:layout_width="103dp"
        android:layout_height="117dp"
        app:srcCompat="@mipmap/ic_launcher"
        tools:layout_editor_absoluteX="18dp"
        tools:layout_editor_absoluteY="19dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp" />

    <TextView
        android:id="@+id/textViewEmail"
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:text="juanpablo@gmail.com"
        tools:layout_editor_absoluteY="81dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_alignTop="@+id/textViewUsername"
        android:layout_toRightOf="@+id/imageViewAvatar"
        android:layout_toEndOf="@+id/imageViewAvatar"
        android:layout_marginTop="28dp" />

    <RatingBar
        android:id="@+id/ratingBarEstrellas"
        style="@style/Widget.AppCompat.RatingBar.Indicator"
        android:layout_width="wrap_content"
        android:layout_height="43dp"
        android:layout_below="@+id/textViewEmail"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="29dp"
        android:numStars="10"
        android:rating="6.5"
        android:stepSize="0.5"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_editor_absoluteY="136dp" />

    <TextView
        android:id="@+id/textViewNivel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nivel"
        android:textSize="18sp"
        tools:layout_editor_absoluteY="181dp"
        app:layout_constraintRight_toLeftOf="@+id/textView5"
        android:layout_marginTop="11dp"
        android:layout_below="@+id/ratingBarEstrellas"
        android:layout_alignLeft="@+id/ratingBarEstrellas"
        android:layout_alignStart="@+id/ratingBarEstrellas" />

    <Button
        android:id="@+id/buttonNuevaPartida"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:onClick="playRound"
        android:padding="30dp"
        android:text="Jugar Nueva Ronda"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.25"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <TextView
        android:id="@+id/textViewUsername"
        android:layout_width="match_parent"
        android:layout_height="27dp"
        android:text="Juan Pablo"
        android:textAlignment="viewStart"
        android:textSize="25sp"
        android:textStyle="bold|italic"
        app:layout_constraintBottom_toTopOf="@+id/textViewEmail"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="23dp"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/imageViewAvatar"
        android:layout_toEndOf="@+id/imageViewAvatar" />

</RelativeLayout>
